{
  "$schema": "http://json.schemastore.org/template",
  "author": "BelousovMike",
  "classifications": [
    "Web",
    "ASP.NET",
    "Microservice",
    "Template"
  ],
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "identity": "Microservice.Template",
  "name": "Microservice Template",
  "shortName": "microservice-template",
  "sourceName": "Microservice.Template",
  "preferNameDirectory": true,
  "symbols": {
    "aspire": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Include .NET Aspire."
    },
    "httpPort": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "5001",
      "description": "HTTP port",
      "replaces": "5001"
    },
    "httpsPort": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "5000",
      "description": "HTTPS port",
      "replaces": "5000"
    }
  },
  "postActions": [
    {
      "actionId": "E2E7E1C0-1B1B-4B2B-9C3E-1A1A1A1A1A1A",
      "description": "Run dotnet restore",
      "args": {},
      "continueOnError": true,
      "manualInstructions": [
        {
          "text": "dotnet restore"
        }
      ]
    }
  ],
  "sources": [
    {
      "include": [
        "**/*"
      ],
      "exclude": [
        ".vs/**",
        ".vscode/**",
        ".git/**",
        ".github/**",
        ".template.config",
        "sample/**"
      ],
      "modifiers": [
        {
          "condition": "(!aspire)",
          "exclude": [
            "src/Microservice.Template.AspireHost/**",
            "src/Microservice.Template.ServiceDefaults/**",
            "tests/Microservice.Template.Aspire.Tests/**"
          ]
        },
        {
          "condition": "(aspire)",
          "include": [
            "src/Microservice.Template.AspireHost/**",
            "src/Microservice.Template.ServiceDefaults/**",
            "tests/Microservice.Template.Aspire.Tests/**"
          ]
        }
      ]
    }
  ]
}